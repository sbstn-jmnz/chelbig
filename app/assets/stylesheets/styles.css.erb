/**********/
/*perforaciones*/
#perfora, #vista{margin-top:18%; padding-bottom:40px; padding-top:40px; position:relative}
#perfora div div, #vista div div{
	border-bottom:solid 1px #9d9fa1;
	box-sizing:border-box;
	margin: 0 auto;
	padding:15px 20px;
	width:75%
	}
#perfora div div:first-child, #vista div div:first-child{border-top:solid 1px #9d9fa1;}
#perfora div div h2, #vista div div h2 {display:inline-block; margin-left:12px; text-align:left}
#perfora div div input[type=radio], #vista div div input[type=radio]{width:18px; height:18px;}

/**********/
/*vista*/
#vista{margin-top:22%;}

/**********/
footer{
	background:#000;
	width:100%;	
}
footer div{
	border-left:solid 1px #C30;
	margin-top:10px;
	text-align: center
}
footer div img{ width:90%; height:auto; margin:0 auto}
footer ul{margin:0; padding:0; width:100%}
footer ul li a{padding:9px 2px}


/*RESPONSIVO*/

@media screen and (max-width: 1280px) {
  

}
@media screen and (max-width: 1024px) {
	.bgFoto{ background-size:100%;background-position: 0 0px;}
	#paneles .flec{top:100px;}
	#colores .flec{top:140px;}
	ul.menu li a, footer ul li a{font-size:11px}
	.contGris{margin-bottom:15px}
	footer ul li a{padding:5px 2px;}
	#perfora div div, #vista div div{padding:15px 5px; width:90%}
	
}
@media screen and (max-width: 991px) {
	aside.col-xs-12{padding-left:0; padding-right:0}
	.logo{display:block; width:40%; margin:0 auto}
	.bgFoto{
		background-position: 0 center;
		background-size:cover; 
		height: auto;
		padding-bottom:15px;
		min-height:85%;
		}
	/*MENU*/
	ul.menu{margin-top:10px; margin-bottom:10px; font-size:0px;}
 	ul.menu li, footer ul li{
		border-top:solid 1px #9d9fa1;
		border-left:solid 1px #9d9fa1;  
		box-sizing:border-box;  
		width:25%;
	}
	ul.menu li:first-child, footer ul li:first-child{border-left:none;}
	ul.menu li a, footer ul li a{padding:12px 8px}
	ul.menu li a i{right:8px}
	/********/
	#paneles .flec, #colores .flec, #perfora .flec, #vista .flec {
		background:url(<%= asset_path 'flechaBg2.png' %>) no-repeat 0 0;
		height:18px;
		top:-17px;
		left:20px;
		width:31px
	}
	#colores .flec{left:32%;}
	#colores .line:nth-child(even){border-left:none}
	#perfora .flec{left:60%;}
	#vista .flec{left:85%;}
	#perfora, #vista{margin:20px auto 20% 18%}
	
	footer ul{font-size:0px;}
	footer ul li{width:50%;}
	footer div{margin:0;padding:10px 0}
	footer div:nth-child(1), footer div:nth-child(2){border-bottom:solid 1px #C30; margin-top:10px;}
	footer div img{ width:50%;}
	footer div.link{padding:0; margin-top:10px}
	
}

@media screen and (max-width: 768px){
	
	
	.logo{display:block; width:50%; margin:0 auto}
	.contGris{margin-bottom:0}
	#perfora div div{width:95%}
}
	
@media screen and (max-width: 640px){
	.logo{display:block; width:55%; margin:0 auto}
	footer div img{ width:70%;}
	#vista{margin-left:22%}
}

@media screen and (max-width: 480px){
	h2{text-align:center}
	/*MENU*/
	ul.menu li a{font-size:9px;padding:12px 3px}
	ul.menu li a i{right:3px}
	/********/
	.columna{width:100%; border-right:none}
}
@media screen and (max-width: 479px){
	.logo{width:100%}
	/*MENU*/
	ul.menu li a{height:30px}
	ul.menu li a span{display:none}
	ul.menu li a i{right:50%; margin-right:-13px; top:3px}
	/********/
}
@media screen and (max-width: 320px){
	#colores .col-xs-6{width:100%}
	#colores div.line{border-left:none}
	#perfora div div, #vista div div{width:100%; padding:10px}
	#vista{margin-left:26%}
	#vista .flec{left:78%;}
	footer div img{ width:100%;}
	}