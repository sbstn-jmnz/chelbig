@charset "utf-8";
body {
	background-color: #000;
	color: #FFF;
	font-family: 'Open Sans', sans-serif;
}
.contendedor{width:100%}
.content{
	position: absolute;
	width: 100%;
	height: 85%;
	margin-left: 0;
}
h2{font-size:16px; font-weight:bold; margin:10px 0}
.bgFoto{
	background-repeat: no-repeat;
	background-position: 0 -160px;
	background-size:100%;
	height:100%
	}
.logo{width:100%; margin-top:10px}

ul.menu{
	margin:45% 0 0 0;
	padding:0;
	width:100%;
	
	}
ul.menu li, footer ul li{ 
	border-bottom:solid 1px #9d9fa1;
	display: inline-block;
	font-weight:normal;
	list-style:none;
	position:relative;
	text-transform:uppercase;
	width:100%;
}
ul.menu li:first-child, footer ul li:first-child{border-top:solid 1px #9d9fa1;}

ul.menu li a, footer ul li a {
	box-sizing:border-box;
	color:#fff;
	display:inline-block;
	font-size:12px;
	padding:12px 2px;
	text-decoration:none;
	width:100%
}
ul.menu li a i{
	position:absolute;
	right:2px;
	top:7px
}
ul.menu li a:hover, footer ul li a:hover{
	background:#161616;
	color:#FFA64D;
	text-decoration:none
}
ul.menu li a.active{
	color:#ff5000;
}
.oculto {display: none;}
/*iconos*/	
.ico{
	background-image:url(<%= asset_path 'iconos.png' %>);
	background-repeat:no-repeat;
	display:inline-block;
}
.ico-01{
	background-position:0 0;
	height:23px;
	width:25px;	
}
a:hover .ico-01, .active .ico-01{background-position:0 -29px;}
.ico-02{
	background-position:-31px 0;
	height:23px;
	width:20px;	
}
a:hover .ico-02, .active .ico-02{background-position:-31px -29px;}
.ico-03{
	background-position:-55px 0;
	height:23px;
	width:22px;	
}
a:hover .ico-03, .active .ico-03{background-position:-55px -29px;}
.ico-04{
	background-position:-80px 0;
	height:23px;
	width:25px;	
}
a:hover .ico-04, .active .ico-04{background-position:-80px -29px;}



/**********/
/*CAJA DESPLIEGUE*/
article.caja{
	background:rgba(35, 31, 32, 0.7);
	border-radius:10px;
	border:solid 1px #9d9fa1;
	box-sizing:border-box;
	font-size:0;
	padding-top:20px;
		
}

article#paneles, article#colores{
	height:90%;
	margin:20px 0;
	padding-bottom: 20px;
}
article.caja .flec{
	background:url(<%= asset_path 'flechaBg.png' %>) no-repeat 0 0;
	height:31px;
	position:absolute;
	width:18px;
}
.columna{
	border-right:solid 1px #C30;
	box-sizing:border-box; 
	display:inline-block; 
	font-size:14px; 
	width:50%
}
.columna:last-child{border:none}
#paneles .flec{
	top:145px;
	left:-17px;
}
#colores .flec{
	top:185px;
	left:-17px;
}
#perfora .flec{
	top:23%;
	left:-17px;
}
#vista .flec{
	top:26%;
	left:-17px;
}

/**********/
/*PANELES*/
.contGris{
	background:#6C6D70;
	display:block;
	margin: 0 auto;
	margin-top:15px;
	padding:10px;
	width:95%;
}
.contGris img{height:auto; margin:0 auto; width:95%}
.contGris p{
	color:#fff;
	font-size:12px; 
	font-weight:normal;
	margin:10px 0 0 0;
	
}
.contGris:hover{text-decoration: none!important;}

